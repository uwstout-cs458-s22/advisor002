<div id="create-course-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Create a Course</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div id='failed-course-alert' class="alert alert-danger alert-dismissible fade show" role="alert" style="display:none">
        Failed to create course.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id='success-course-alert' class="alert alert-success alert-dismissible fade show" role="alert" style="display:none">
        Successfully created the course.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id='create-course-form' class="needs-validation" novalidate>
        <div class="modal-body">
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="course-number">Course Number*</label>
              <input type="text" class="form-control validate" id="course-number" placeholder="Course Prefix and Number" required>
            </div>
            <div class="form-group col-md-6">
              <label for="course-name">Course Name*</label>
              <input type="text" class="form-control validate" id="course-name" placeholder="Course Name" required>
            </div>
            <div class="form-group col-md-2">
              <label for="course-credits">Credits*</label>
              <input type="text" class="form-control validate" id="course-credits" placeholder="Credits" required>
            </div>
          </div>
          <div class="form-row">
            <label for="course-description">Course Description*</label>
            <textarea class="form-control validate" id="course-description" rows="3" placeholder="Course Description" required></textarea>
          </div>
          <br>
          <div id="prerequisite-section">
            <label>Prerequisite Courses</label>
            <a href="#" onclick="addPrerequisiteInput();">Add More</a>
            <div class="form-row">
              <div class="form-group col-md-4">
                <input type="text" class="form-control course-prereq" placeholder="Course Prefix and Number">
              </div>
              <div class="form-group col-md-4">
                <input type="text" class="form-control course-prereq" placeholder="Course Prefix and Number">
              </div>
              <div class="form-group col-md-4">
                <input type="text" class="form-control course-prereq" placeholder="Course Prefix and Number">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" onClick="submitCourseForm(this.form)">Submit</button>
          <button type="button" class="btn btn-danger" onClick="resetPlan();">Reset</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </form>
    </div>
  </div>
</div>
