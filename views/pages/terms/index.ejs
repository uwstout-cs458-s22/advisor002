<div class="card" style="padding-top: 2%;" id="body">
    <div class="text-center bold" id="pagegrid"><h4>Term Information Page</h4>
        <form action="./terms" style="margin-top: 2%; margin-right: 2%;" id="form" name="myform">
            <input type="button" class="btn btn-primary" value="Compare" onClick="updateTerm()"></input>
            <input type="button" class="btn btn-success" value="Add Term" onClick="addTerm()"></input>
            <input type="button" class="btn btn-danger" value="Delete Term" onClick="deleteTerm()"></input>
        </form>
    </div>
    <label for="termSelection" class="align-middle text-center"><h5 style="margin-top: 2%;">Select the term you wish to view</h5></label>
    <div class="terms-holder">
        
        <%for(var i = 0; i < 6; i++) {%>    
        <div class="dropdown terms-term">
            <button class="btn btn-secondary" style="width:100%; height: 200%;" type="button" id="dropdownMenuButton" data-toggle="modal" data-target="#termsModal<%=i%>" aria-haspopup="true" aria-expanded="false">
              Spring 2022
            </button>
            <div class="dropdown-menu" style="width: 100%; text-align: center;" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Web and Internet</a>
              <a class="dropdown-item" href="#">English 102</a>
              <a class="dropdown-item" href="#">Calculus 2</a>
            </div>
          </div>
          
        <div class="modal fade" id="termsModal<%=i%>" tabindex="-1">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="termModalLabel">Spring 2022</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body" id="modalContent">
                    <h6>Classes:</h6>
                    Web and Internet</br>
                    English 102</br>
                    Calculus 2</br>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
                </div>
            </div>
            </div>
        </div>

        <%}%>
    </div>
</div>

<script type="text/javascript">
    let term = ''

    function buildPage(starting) {
        const oldDiv = document.getElementById('term')
        if (starting == '') {
            oldDiv.innerHTML = 'You do not have any terms yet, please add a term before selection'
        } else {
            oldDiv.innerHTML = `You are looking at information for term ${term}`
        }
    }
    window.onload = buildPage(term)
</script>

<div id="termsModal" class="modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
            </div>
            <div class="modal-body">
                <button class="btn btn-success" onClick="removeTerm(1)" width="10%" data-dismiss="modal">Yes</button>
                <button class="btn btn-danger" onClick="hideModal()" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<%- include('./createTermModal') %>